	<body
		style="margin: 0px; font-family: {{ config.font|e }}">
		{# Backdrop #}
		<div id="reviews-backdrop" class="reviews-backdrop" onclick="toggleReviewContainer(false)"></div>
		{# Google Widget #}
		<div id="widget-container" class="widget-container visible widget-{{ config.position }}" style="background-color: {{ config.widgetBackgroundColor }}" onclick="toggleReviewContainer(true)">
			<div class="title-container">
				<img class="rating-image m-y-0" src="data:image/png;base64," alt="google" width="32"/>
				<div class="widget-title text-size-{{ config.widgetTextSize }}" style="color: {{ config.widgetTextColor }}">{{ config.businessName }}</div>
			</div>
			<div class="widget-rating">
				<span class="rating-number f-w-700 text-size-{{ config.widgetTextSize }}">{{ location.ratings }}</span>
				<span class="rating-stars star-size-{{ config.widgetStarSize }}" style="color: {{ config.widgetStarColor }}">
					<i data-star="{{ location.ratings }}"></i>
				</span>
				<span class="reviews-count">({{ location.reviews_total }})</span>
			</div>
		</div>
		{# Reviews container #}
		<div id="reviews-container" class="reviews-container scrollbar-thin widget-{{ config.position }}" style="background-color: {{ config.reviewContainerColor }}">
			<div class="reviews-container-inner">
				<button class="reviews-container-close" onclick="toggleReviewContainer(false)">
					&#10006;
				</button>
				{% for review in reviews %}
				{# Single Review #}
				<div class="single-review-container" style="background-color: {{ config.reviewBackgroundColor }}">
					<div class="single-review-inner">
						<div class="single-review-header">
							<div class="image-holder">
								<img class="user-image" src="{{ review.profile_photo_url }}"/>
								<img class="google-image m-y-0" src="data:image/png;base64," alt="google" width="24"/>
							</div>
							<div class="review-title">
								{% if config.showReviewAuthor %}
								<div class="review-name text-size-{{ config.reviewTextSize }}" style="color: {{ config.reviewTextColor }}">{{review.display_name}}</div>
								{% endif %}
								{% if config.showReviewDate %}
								<div class="review-time text-size-{{ config.reviewTextSize }}">{{review.created_at|date("M j, Y") }}</div>
								{% endif %}
							</div>
						</div>
						{% if config.showReviewRating %}
						<div class="review-stars">
							<span class="rating-stars star-size-{{config.reviewStarSize}}" style="color: {{config.reviewStarColor}}">
								<i data-star="{{ review.star_rating }}"></i>
							</span>
						</div>
						{% endif %}
						{% if config.showReviewContent %}
						<div class="review-comment text-size-{{config.reviewTextSize}}" style="color: {{config.reviewTextColor}}">{{review.comment}}</div>
						{% endif %}
					</div>
				</div>
				{% endfor %}
			</div>
		</div>

		<script>
		  let parentOrigin = '';
			let parentSource;
			function toggleReviewContainer(open) {
				const reviewsBackdropElement = document.getElementById('reviews-backdrop');
				const reviewsContainerElement = document.getElementById('reviews-container');
				const widgetContainerElement = document.getElementById('widget-container');
				if (open) {
					if (parentSource) parentSource.postMessage('google-reviews-opened', parentOrigin);
					reviewsBackdropElement.classList.add('visible');
					reviewsBackdropElement.classList.remove('hidden');
					reviewsContainerElement.classList.add('slide-in');
					reviewsContainerElement.classList.remove('slide-out');
					widgetContainerElement.classList.remove('visible');
					widgetContainerElement.classList.add('hidden');
				} else {
					reviewsBackdropElement.classList.add('hidden');
					reviewsBackdropElement.classList.remove('visible');
					reviewsContainerElement.classList.add('slide-out');
					reviewsContainerElement.classList.remove('slide-in');
					widgetContainerElement.classList.add('visible');
					widgetContainerElement.classList.remove('hidden');
					if (parentSource) parentSource.postMessage('google-reviews-closed', parentOrigin);
				}
			}

			function handleHandShake(event) {
				if (event.data !== "google-reviews-widget-handshake") return;
				const widgetContainerElement = document.getElementById('widget-container');
				parentOrigin = event.origin;
				parentSource = event.source;
				const config = `config:width=${widgetContainerElement.offsetWidth}&height=${widgetContainerElement.offsetHeight}`;
				parentSource.postMessage(config, parentOrigin);
				window.removeEventListener("message", handleHandShake, false);
			}
			window.onload = () => { window.addEventListener("message", handleHandShake, false); };
    </script>
